---
instance:
  distribution:
    # renovate: datasource=github-releases depName=controlplaneio-fluxcd/distribution
    version: 2.5.0
  cluster:
    networkPolicy: false
  components:
    - source-controller
    - kustomize-controller
    - helm-controller
    - notification-controller
  sync:
    kind: GitRepository
    #% if data.GITHUB_PRIVATE == "true" | default("false") %#
    url: "ssh://git@github.com/#{ data.GITHUB_REPOSITORY }#.git"
    pullSecret: github-deploy-key
    #% else %#
    url: "https://github.com/#{ data.GITHUB_REPOSITORY }#.git"
    #% endif %#
    ref: "refs/heads/#{ data.GITHUB_BRANCH | default('main', true) }#"
    path: kubernetes/flux/cluster
