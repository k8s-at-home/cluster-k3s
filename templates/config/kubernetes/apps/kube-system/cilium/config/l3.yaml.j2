#% if data.CILIUM_BGP_ENABLED == "true" | default("false") %#
---
# yaml-language-server: $schema=https://datreeio.github.io/CRDs-catalog/cilium.io/ciliumbgppeeringpolicy_v2alpha1.json
apiVersion: cilium.io/v2alpha1
kind: CiliumBGPPeeringPolicy
metadata:
  name: l3-policy
spec:
  nodeSelector:
    matchLabels:
      kubernetes.io/os: linux
  virtualRouters:
    - localASN: #{ data.CILIUM_BGP_NODE_ASN }#
      exportPodCIDR: false
      serviceSelector:
        matchExpressions:
          - key: thisFakeSelector
            operator: NotIn
            values:
              - will-match-and-announce-all-services
      neighbors:
        - peerAddress: "#{ data.CILIUM_BGP_ROUTER_ADDR }#/32"
          peerASN: #{ data.CILIUM_BGP_ROUTER_ASN }#
#% endif %#
